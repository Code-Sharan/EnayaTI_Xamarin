                                           Grid.Row="0"
                                           HasShadow="True"
                                           BackgroundColor="#01A7FF"
                                           BorderColor="#01A7FF"
                                           CornerRadius="10">
                                        <Label Grid.Column="0"
                                           Text="{Binding planName}"
                                           FontAttributes="Bold"
                                           FontSize="Header"
                                           LineBreakMode="TailTruncation"
                                           HorizontalOptions="Start"
                                           HorizontalTextAlignment="Start"/>
                                    </Frame>
